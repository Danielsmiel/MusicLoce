<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/header_net_ll"
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:background="@color/halftransparent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/header_net_lv_pic_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/bg_nophoto" />

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/header_net_album_name_tv"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="专辑名:未知"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/header_net_album_lang_tv"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="语言:未知"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/header_net_album_date_tv"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="发布日期:未知"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/header_net_album_singer_tv"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="作者:未知"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/header_net_ll"
        android:background="@color/halftransparent" >
    </LinearLayout>

</RelativeLayout>